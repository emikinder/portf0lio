---
import Icon from 'astro-icon';
import { projects } from '../data/projects.json';
---
<section
  class="flex flex-col pt-16 lg:h-[100vh] gap-4"
  id="work"
>
  <section class="flex justify-between items-baseline custom-padding">
    <p class="font-inclusive text-4xl sm:text-5xl lg:text-7xl">Work</p>
    <Icon
      name="cube-arrow"
      class="w-[60px] md:w-[100px] sm:mr-16"
    />
  </section>
  <section class="flex-1 flex flex-col border-b">
    {
      projects
        .filter((project) => project.active === true)
        .map((project) => (
          <a
            href={project.link}
            target="_blank"
            class="hidden lg:flex flex-col justify-center custom-padding cursor-pointer border-t text-customWhite border-customWhite flex-1 sm:px-16 relative overflow-hidden group"
          >
            <div class="absolute inset-0 transform -translate-x-full group-hover:translate-x-0 transition-transform duration-500 ease-in-out bg-customWhite" />
            <div class="relative z-10 font-inconsolata text-md text-nowrap group-hover:text-customBlack group-hover:delay-100">
              <div class="flex flex-col">
                <p>{project.title}</p>
                <small class="text-xs">{project.description}</small>
              </div>
              <div class="flex mt-3">
                {project.techs.map((tech) => (
                  <div class="w-fit text-xs text-customBlack group-hover:text-customWhite bg-customWhite group-hover:delay-100 group-hover:bg-customBlack px-2 rounded-full mr-2">
                    {tech}
                  </div>
                ))}
              </div>
            </div>
          </a>
          <div
            class="py-3 flex lg:hidden flex-col custom-padding cursor-pointer border-t text-customWhite border-customWhite sm:px-16 relative overflow-hidden group"
          >
            <div class="absolute inset-0 transform -translate-x-full group-hover:translate-x-0 transition-transform duration-500 ease-in-out bg-customWhite" />
            <div class="flex justify-between pr-3 relative z-10 font-inconsolata text-md text-nowrap group-hover:text-customBlack">
              <div class="flex flex-col">
                <p>{project.title}</p>
                <small class="text-xs">{project.description}</small>
                <div class="flex mt-3">
                  {project.techs.map((tech) => (
                    <div class="w-fit text-xs text-customBlack group-hover:text-customWhite bg-customWhite group-hover:delay-100 group-hover:bg-customBlack px-2 rounded-full mr-2">
                      {tech}
                    </div>
                  ))}
                </div>
              </div>
              <a
                href={project.link}
                target="_blank"
                rel="noopener noreferrer"
                class="flex group-hover:text-customBlack group-hover:delay-200">
                <Icon
                  name="link"
                  class="w-[25px] fill-current"
                />
              </a>
            </div>
          </div>
        ))
    }
  </section>
</section>
