        direction="left"
        delay={200}
        triggerOnce
        client:load
        className="pl-3 md:pl-20 flex"
      >
        <!-- <Icon
          name="stars"
          class="w-[50px] md:w-[50px]"
        /> -->
        <span class="md:block hidden">creative developer</span><span
          class="block md:hidden">creative dev.</span
        ></Slide
      >

